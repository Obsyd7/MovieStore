@model MovieStore.Models.MovieModel
@{

               ViewBag.Title = "Details";
               Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Html.DisplayFor(model => model.Name)</h2>

<ul>
    <li>
        Genre : @Html.DisplayFor(model => model.Genre)
    </li>
    <li>
        Release Date : @Model.ReleaseDate.ToLongDateString()
    </li>
    <li>
        Date Added : @Model.DateAdded.ToLongDateString()
    </li>
    <li>
        Number in Stock : @Html.DisplayFor(model => model.NumberInStock)
    </li>
</ul>